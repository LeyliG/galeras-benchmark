{
	"name": "Chat-GPT Failures 1.0",
	"build": { 
		"context": "..",
		"dockerfile": "Dockerfile",
		"args": {
			"NODE_VERSION": "none"
		}
	},
	
	"mounts": [
        "source=/nfs/semeru/semeru_datasets,target=/workspaces/chat-gpt-failures/datasets,type=bind,consistency=cached",
		"source=/nfs/semeru/data/dvc,target=/tf/dvc,type=bind,consistency=cached"
	],	
	"remoteEnv": {
        //"MY_PROJECT_NAME": "The-container-name-here" //NOTE: make this name the same as the folder containing the repo
        "MY_PROJECT_NAME": "chat-gpt-failures"
    }
}
	